<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/earthQuakeRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/magnitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/magnitude_circle"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="16sp"
        tools:text="7.2" />

    <TextView
        android:id="@+id/offsetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/magnitudeTextView"
        android:textSize="15sp"
        tools:text="88 kms N of" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/offsetTextView"
        android:layout_toEndOf="@id/magnitudeTextView"
        android:textSize="18sp"
        android:textColor="#000"
        android:textStyle="bold"
        tools:text="Pacific-Antartic Ridge" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        tools:text="Jan 30, 2016" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/dateTextView"
        android:layout_alignStart="@id/dateTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        tools:text="8:55 AM" />
</RelativeLayout>