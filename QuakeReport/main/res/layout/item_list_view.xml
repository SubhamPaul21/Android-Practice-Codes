<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/magnitude_text_view"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="0dp"
        android:gravity="bottom"
        android:paddingRight="0dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="7.2" />

    <TextView
        android:id="@+id/location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/magnitude_text_view"
        android:layout_toRightOf="@id/magnitude_text_view"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:gravity="bottom"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:textSize="30sp"
        tools:text="South Francisco" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:gravity="end"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@id/location_text_view"
        android:layout_toRightOf="@id/location_text_view"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:textSize="20sp"
        tools:text="Oct 30,2011" />



</RelativeLayout>
